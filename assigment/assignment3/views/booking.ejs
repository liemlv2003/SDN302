<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Room Bookings</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body>
    <div class="container">
        <h1 class="text-center text-primary">Room Bookings</h1>

        <table class="table table-bordered table-hover mt-4">
            <thead class="table-primary">
                <tr>
                    <th>Customer Name</th>
                    <th>Room Number</th>
                    <th>Start Time</th>
                    <th>End Time</th>
                    <th>Total Amount (VND)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% if (bookings.length > 0) { %>
                    <% bookings.forEach(booking => { %>
                        <tr>
                            <td><%= booking.customerName %></td>
                            <td><%= booking.roomNumber %></td>
                            <td><%= new Date(booking.startTime).toLocaleString() %></td>
                            <td><%= new Date(booking.endTime).toLocaleString() %></td>
                            <td><%= booking.totalAmount.toLocaleString() %></td>
                            <td>
                                <a href="/bookings/edit/<%= booking._id %>" class="btn btn-sm btn-warning">Update</a>
                                <form method="POST" action="/bookings/delete/<%= booking._id %>" style="display:inline;">
                                    <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this booking?')">Delete</button>
                                </form>
                            </td>
                        </tr>
                    <% }) %>
                <% } else { %>
                    <tr>
                        <td colspan="6" class="text-center">No bookings available</td>
                    </tr>
                <% } %>
            </tbody>
        </table>

        <div class="text-center">
            <a href="/bookings/add" class="btn btn-success btn-lg">+ Book a Room</a>
        </div>
    </div>
</body>
</html>
